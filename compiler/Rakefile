# Rakefile - rakefile for Vish compiler/ example.vs files

require 'rake/clean'
CLEAN.include('*.vsc')

FileList['*.vs'].each do |src|
  file "#{src}c" => src
end

rule /.*\.vsc/ => '.vs' do |t|
  sh "./vishc.rb #{t.source} #{t.name}"
end

src_files = FileList['*.vs']

task :default => src_files.ext('vsc') do
  puts 'compiled .vs into .vsc'
end
