#!/usr/bin/env ruby
# vish - runs Vish scripts: *.vs

require_relative '../lib/vish'
require_relative 'options'
get_options('vish', 'Compile and run Vish source file file.vs').parse!

source = ARGF.read

exit_status = 1
begin
  eval = Evaluator.new
  p eval.eval(source)
exit_status = 0
rescue Parslet::ParseFailed => err
  puts "Syntax Error: #{err.message}"
end

exit(exit_status)
